<p id="notice"><%= notice %></p>

<h1>Listing Stacks</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Site url</th>
      <th>Short describe</th>
      <th>Describe</th>
      <th>Version</th>
      <th>Stack field</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stacks.each do |stack| %>
      <tr>
        <td><img src="https://s3.ap-northeast-2.amazonaws.com/dahisy-4th-project/Database/<%= stack.name %>.png" width="90" height="90"></td>
        <td><%= stack.name %></td>
        <td><a href="<%= stack.site_url %>">공식 웹사이트</a></td>
        <td><%= stack.short_describe %></td>
        <td><%= stack.describe %></td>
        <td><%= stack.version %></td>
        <td><%= stack.stack_field %></td>
        <td><%= stack.user %></td>
        <td><%= link_to 'Show', stack %></td>
        <td><%= link_to 'Edit', edit_stack_path(stack) %></td>
        <td><%= link_to 'Destroy', stack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stack', new_stack_path %>
